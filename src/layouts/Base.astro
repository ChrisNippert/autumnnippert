---
// src/layouts/Base.astro
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import '../styles/globals.css'     // <-- this is the key line
const { title = 'ChrisNippert', description = 'CS • Cyber • AI/ML • Music' } = Astro.props
---
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <!-- <link rel="preconnect" href="https://rsms.me" /> -->
    <link rel="stylesheet" href="/styles/globals.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/katex.min.css" integrity="sha384-GvrOXuhMATgEsSwCs4smul74iXGOixntILdUW9XmUC6+HX0sLNAK3q71HotJqlAn" crossorigin="anonymous">
  </head>
  <body class="bg-bg text-text antialiased">
    <Header />
    <main class="mx-auto max-w-4xl px-4 py-12 lg:px-8">
      <slot />
    </main>
    <Footer />
    <script>
      // Respect system preference on first paint
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches
      document.documentElement.classList.toggle('dark', prefersDark)
    </script>
  </body>
</html>
