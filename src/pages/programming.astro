  <!-- GitHub Portfolio Section -->
  <section class="space-y-6 mt-12">
    <header class="space-y-2">
      <h1 class="text-3xl font-semibold tracking-tight">My Programming Portfolio</h1>
      <p class="text-text-muted">Selected projects I’ve built or actively maintain.</p>
    </header>

    <ul class="mt-4 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {projects.map((p) => (
        <li class="group rounded-2xl border border-border bg-bg-card p-5 transition duration-200 hover:-translate-y-0.5 hover:border-white/20">
          <div class="flex items-start justify-between gap-4">
            <h2 class="text-lg font-medium">{p.title}</h2>
            <a
              href={p.href}
              aria-label={`${p.title} on GitHub`}
